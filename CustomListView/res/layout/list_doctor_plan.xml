<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/llDoctorPotential"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1.2"
        android:background="#006400"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewDoctorPotential"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/textWhite"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:gravity="left"
        android:orientation="vertical"
        android:padding="3dp" >

        <TextView
            android:id="@+id/textViewDoctorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/color_text_deep"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewDoctorId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/color_text_deep" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llShift"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="4"
        android:gravity="right"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/cbMorning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/custom_radio_button_morning"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="3dp"
             />

        <CheckBox
            android:id="@+id/cbEvning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/custom_radio_button_evening"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp" />
    </LinearLayout>

</LinearLayout>